<ivysettings>
	<settings defaultResolver="chained" />
	<resolvers>
		<chain name="chained">
			<filesystem name="libraries">
				<artifact
					pattern="${user.home}/.ivy2/local/repository/[artifact]-[revision].[ext]" />
			</filesystem>
			<ibiblio name="ibiblio" m2compatible="true" />
			<url name="scala" m2compatible="true">
				<artifact
					pattern="http://scala-tools.org/repo-releases/[organization]/[artifact]/[revision]/[artifact]-[revision].[ext]" />
			</url>
		</chain>
	</resolvers>
</ivysettings>